%main.show_categories_main
  .show_main
    .content_main
      .content_main
        .title_box
          %h2.title_box-title トップの商品一覧
          %ul.list_box
            - @categories.each do |category|
              =link_to category_path(category), class: "category_list_link"do
                %li.category_list
                  = category.category_name
        .item_lists
          - @items.each do |item|
            .item_list
              =link_to item_path(item) ,class: "item_link" do
                %figure.item_list-image
                  = image_tag src= Image.find_by(item_id: item).item_image, size: "220x150"
                .item_list--body
                  %h3.item_name 
                    = item.item_name
                  .details
                    %ul.price_likes
                      %li.item_price
                        = "#{item.price} 円"
                      %li.item_likes
                        ★２
                    %p.zei
                      (税込)