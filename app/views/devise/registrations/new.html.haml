#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h5 会員情報入力
      = render "devise/shared/links"
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :ニックネーム
          .field-input
            = f.text_field :nickname, autofocus: true
        .field
          .field-label
            = f.label :メールアドレス
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :パスワード
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :password_confirmation
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"

        .field
          .field-label
            = f.label :お名前（全角）
          .field-input
            = f.text_field :family_name, autofocus: true
          .field-input
            = f.text_field :first_name, autofocus: true

        .field
          .field-label
            = f.label :お名前カナ
          .field-input
            = f.text_field :family_name_kana, autofocus: true
          .field-input
            = f.text_field :first_name_kana, autofocus: true
        .field
          .field-label
            = f.label :生年月日
          .field-input
            = f.text_field :birthday, autofocus: true

        .actions
          = f.submit "Create Account", class: 'btn'
