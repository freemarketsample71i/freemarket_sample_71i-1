.session-new
  %header.session-new-header
    %h1.session-new-header__logo-part
      =link_to image_tag("logo.png", size: "193x49" ), '#'
  %main.session-new-main
    .login-panel
      .login-panel-no-account
        %p.login-panel-no-account__info
          アカウントをお持ちでない方はこちら
        = link_to '新規会員登録','#', class: 'login-panel-no-account__make-account'
      .login-panel-by-sns
      .login-panel-by-email
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .email-field
            .field-label
              -# = f.label :メールアドレス
            .field-input
              = f.email_field :email, autofocus: true, class: 'email-field-form'
          .password-field
            .field-label
              -# = f.label :パスワード
              %i (英数字8文字以上)
            .field-input
              = f.password_field :password, autocomplete: "off", class: 'password-field-form'
          .robocheck-field
          .actions
            = f.submit "ログイン", class: 'login-btn'
          = link_to 'パスワードを忘れた方', '#', class: 'to-password-reminder'

  %footer.session-new-footer
    %small
      %nav.session-new-footer__nav
        %ul.session-new-footer__nav__ul
          %li= link_to 'プライバシーポリシー','', class: 'registration-new-footer__nav__ul__li'
          %li= link_to 'フリマ利用規約', '', class: 'registration-new-footer__nav__ul__li'
          %li= link_to '特定商取引に関する表記','', class: 'registration-new-footer__nav__ul__li'
      %a.footer-logolink
        = image_tag src="logo-white.png", size: "223x65"
      %p.footer-p
        © Gasiwatani, Inc.
