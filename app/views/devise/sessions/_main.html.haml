%main.session-new-main
  .login-panel
    .login-panel-no-account
      %p.login-panel-no-account__info
        アカウントをお持ちでない方はこちら
      = link_to '新規会員登録',new_user_registration_path, class: 'login-panel-no-account__make-account'
    .login-panel-by-sns
    .login-panel-by-email
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .email-field
          .field-label
            -# = f.label :メールアドレス
          .field-input
            = f.email_field :email, autofocus: true, class: 'email-field-form'
        .password-field
          .field-label
            -# = f.label :パスワード
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off", class: 'password-field-form'
        .robocheck-field
        .actions
          = f.submit "ログイン", class: 'login-btn'
        = link_to 'パスワードを忘れた方', '#', class: 'to-password-reminder'