.showmain
  .showmain--product
    .contentleft
    .contentright
      .topcontent
        .itembox
          .itembox__name
            product2
          .itembox__body
            %ul.itembox_item
              %li.itembox_item_main
                =@image. image_tag(src='https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png', class: "itembox_item_img")
                %ul.itembox_item_sub
                  %li.itembox_item_sub_list
                    = image_tag(src='https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png', class: "itembox_item_sub_list")
                  %li.itembox_item_sub_list
                    = image_tag(src="https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/11/a005.png", class: "itembox_item_sub_list")
                  %li.itembox_item_sub_list
                    = image_tag(src="https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/12/a006.png", class: "itembox_item_sub_list")
          .itembox__price
            .price= @item.price
            .itembox__price__detail
              <span>(税込)</span>
              <span>送料込み</span>
          .itembox__detail
            = @item.item_info
          %table.table
            %tbody.table__box
              %tr.tr
                %th.th
                  出品者
                %td.td=@item.user.nickname
              %tr
                %th カテゴリー
                %td
                  =link_to @item.category.category_name
                  %br/
                  =link_to @item.category.category_name
                  %br/
                  =link_to @item.category.category_name
              %tr
                %th ブランド
                %td=@item.brand_id
              %tr
                %th 商品の状態
                %td= @item.condition
              %tr
                %th 配送料の負担
                %td=@item.postage_burden
              %tr
                %th 発送元の地域
                %td=link_to @item.shipping_area
              %tr
                %th 発想日の目安
                %td= @item.days_to_ship
          .commentbox
            %button{type: "submit", class: "commentbtn"}
              %p.fa 購入画面に進む